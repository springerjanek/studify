{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"]
}
